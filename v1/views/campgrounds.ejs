<% include partials/header %>
   



   <div class="container">
      <header class="jumbotron">
         <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View the best camp sites from all over the world</p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campgrounds</a>
         </div>
      </header>



      <div class="row" style="display: flex; flex-wrap: wrap;">
         <% campgrounds.forEach(function(camps){ %>
            <div class="col-md-3 col-sm-6">
               <div class="thumbnail">
                  <img src="<%= camps.image %>">

                  <div class="caption">
                     <h4><%= camps.name %></h4>
                  </div>
               </div>
            </div>
            <% }) %>
      </div>
   </div>




   <% include partials/footer %>